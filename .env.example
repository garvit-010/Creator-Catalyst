# ===========================================
# Creator Catalyst - Environment Configuration
# ===========================================

# Primary AI Provider - Google Gemini (Required for video analysis)
GOOGLE_API_KEY=YOUR_API_KEY_HERE

# Image Generation - Hugging Face (Required for thumbnails)
HF_TOKEN=your_huggingface_token_here



# OpenAI API (Fallback for text generation if Gemini fails)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4-turbo, gpt-3.5-turbo

# OR use Ollama (Local LLM - no API key needed)
# Install Ollama from: https://ollama.ai
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2  # Options: llama3.2, mistral, codellama

# Fallback Configuration
ENABLE_FALLBACK=true  # Set to 'false' to disable fallback mechanism








